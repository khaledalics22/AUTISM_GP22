<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/b2"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <Button
        android:id="@+id/glass_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_margin="10dp"
        android:text="Tell Me Emotions"
        android:textColor="@color/ask_background"
        style="@style/BigButton"
        tools:targetApi="p" />

    <Button
        android:id="@+id/real_time_practice"
        style="@style/BigButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:text="Practice Expressions"
        android:textColor="@color/ask_background"
        tools:targetApi="p" />

    <Button
        android:id="@+id/Test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:text="Let's Play"
        style="@style/BigButton"
        android:textColor="@color/ask_background"
        tools:targetApi="p" />

    <Button
        android:id="@+id/learn_sentence"
        style="@style/BigButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:text="Learn Sentences"
        android:textColor="@color/ask_background"
        tools:targetApi="p" />

</LinearLayout>