<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"

        tools:context="com.example.App.ProfileUser">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="14dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="100dp"
            app:cardElevation="4dp">


            <ImageView
                android:id="@+id/profileimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/b1"
                android:contentDescription="Icon"
                android:scaleType="fitXY"
                android:src="@drawable/makkah" />

        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editFirstNamep"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text="khalid"
                android:textSize="38sp"
                android:textColor="@color/second_color"
                android:textStyle="bold"
                android:gravity="end"
                tools:ignore="SpeakableTextPresentCheck" />


            <TextView
                android:padding="5dp"
                android:id="@+id/editTextLastNamep"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Ali"
                android:textSize="38sp"
                android:textColor="@color/second_color"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <TextView
            android:id="@+id/Emailp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editTextTextEmailAddressp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textSize="34sp"
            android:text="khld@gmail.com"
            android:layout_marginBottom="10dp"
            android:textColor="@color/second_color"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/UserNamep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editUserNamep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:minHeight="48dp"
            android:text="khaled ali"
            android:textColor="@color/second_color"
            android:textSize="34sp"
            android:layout_marginBottom="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Birthdatep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Birth date"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editBirthdatep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="12-23-43"
            android:textColor="@color/second_color"
            android:textSize="34sp"
            tools:ignore="SpeakableTextPresentCheck" />
        <Button
            android:id="@+id/Logout"
            style="@style/BigButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="32dp"
            android:text="Logout"
            android:textAlignment="center"
            android:layout_margin="30dp"
            android:background="@drawable/round_button"
            android:textColor="@color/hate_background"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck">
        </Button>
    </LinearLayout>
</ScrollView>