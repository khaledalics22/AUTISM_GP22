<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/second_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/main_color</item>
        <item name="backgroundTint">@color/second_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:radius">30dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/main_color</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
